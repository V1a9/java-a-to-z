<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.vgoryashko.hibernate.carsstore.models.parts.Part" table="parts">

        <id name="id" column="id">
            <generator class="identity"/>
        </id>

        <discriminator column="part_type" type="string"/>

        <subclass name="com.vgoryashko.hibernate.carsstore.models.parts.Engine" discriminator-value="ENGINE">
            <property name="description"/>
        </subclass>
        <subclass name="com.vgoryashko.hibernate.carsstore.models.parts.Transmission" discriminator-value="TRANSMISSION">
            <property name="description"/>
        </subclass>
        <subclass name="com.vgoryashko.hibernate.carsstore.models.parts.Suspension" discriminator-value="SUSPENSION">
            <property name="description"/>
        </subclass>
        <subclass name="com.vgoryashko.hibernate.carsstore.models.parts.Body" discriminator-value="BODY">
            <property name="description"/>
        </subclass>

    </class>

</hibernate-mapping>