<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.vgoryashko.hibernate.carsstore.models.cars.Car" table="cars">

        <id name="id" column="car_id">
            <generator class="identity"/>
        </id>
        <property name="vin" column="vin" not-null="true"/>
        <property name="brand" column="brand"  not-null="true"/>

        <bag name = "parts" table="parts_cars" lazy="false">
            <key column = "car_id"/>
            <many-to-many column = "part_id" class="com.vgoryashko.hibernate.carsstore.models.parts.Part"/>
        </bag>

    </class>

</hibernate-mapping>