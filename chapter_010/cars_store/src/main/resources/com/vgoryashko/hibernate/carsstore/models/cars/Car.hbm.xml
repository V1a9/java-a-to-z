<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.vgoryashko.hibernate.carsstore.models.cars.Car" table="cars">

        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="vin" column="vin" not-null="true"/>
        <property name="brand" column="brand"  not-null="true"/>

        <!--many-to-one unidirectional association        -->
        <many-to-one name="item"
                     column="item_id"
                     class="com.vgoryashko.hibernate.carsstore.models.items.Item"
                     unique="true"
                     not-null="true" lazy="false"/>

    </class>

</hibernate-mapping>