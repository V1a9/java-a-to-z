<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.vgoryashko.hibernate.carsstore.models.items.Item" table="items">

        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <discriminator column="item_type" type="string"/>

        <subclass name="com.vgoryashko.hibernate.carsstore.models.items.Advertisement" discriminator-value="ADVERTISEMENT">
            <property name="description" column="description"/>
            <property name="price" column="price"/>
            <property name="created" column="post_date"/>
            <property name="sold" column="sold"/>

            <set name="photos" table="advert_photos" inverse="true" cascade="all-delete-orphan">
                <key column="advert_id"  not-null="true"/>
                <element type="string" column="filename" not-null="true"/>
            </set>

            <many-to-one name="user"
                         column="user_id"
                         class="com.vgoryashko.hibernate.carsstore.models.users.User"
                         not-null="true"
            />

            <many-to-one name="car"
                         column="car_id"
                         class="com.vgoryashko.hibernate.carsstore.models.cars.Car"
                         unique="true" cascade="all"
            />

        </subclass>

    </class>

</hibernate-mapping>