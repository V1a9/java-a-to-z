<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.vgoryashko.hibernate.carsstore.models.users.User" table="users">
        <id name="id" column="user_id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <property name="login" column="login" unique="true"/>
        <property name="password" column="password"/>

        <bag name="advertisements" table="advertisements" lazy="false" cascade="all">
            <key column="user_id" />
            <one-to-many class="com.vgoryashko.hibernate.carsstore.models.items.Advertisement"/>
        </bag>

    </class>

</hibernate-mapping>