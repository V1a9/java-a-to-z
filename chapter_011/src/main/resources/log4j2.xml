<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{[%d{yy-MMM-dd HH:mm:ss:SSS}] [%p] Thread-[%t] Method-[%M()] [%c{2}:%L] - %m%n}"/>
        </Console>
    </Appenders>

    <loggers>
        <Logger name="com.vgoryashko.spring.dao.UserStorage" level="info"/>
        <Logger name="com.vgoryashko.spring.dao.JdbcStorage" level="info"/>
        <Logger name="com.vgoryashko.spring.dao.MemoryStorage" level="info"/>
        <root level="error">
            <appender-ref ref="STDOUT"/>
        </root>
    </loggers>
</Configuration>